- hosts: all
  gather_facts: true
  tasks:
    - name: 'Splunk-Ansible - check on async task'
      async_status:
        jid: "{{ async_splunk_ansible.ansible_job_id }}"
      register: splunk_job_result
      until: splunk_job_result.finished
      retries: 1000

